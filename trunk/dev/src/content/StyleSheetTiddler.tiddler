/***
!StyleSheet for MeetingMinutes tiddlers
***/
/*{{{*/

/* MeetingMinutes tiddler */
/* -------------------------------------------------------------------------- */

/* View Template */

.mmViewFieldName {
      font-size: 100%;
      color: [[ColorPalette::SecondaryDark]];
      border-top: 1px;
      border-right: 1px;
      border-left: 1px;
      border-bottom: 1px;
      margin-top: 0.5em;
      margin-bottom: 0.5em;
}

.mmViewFieldValue {
      border-top: 1px;
      border-right: 1px;
      border-left: 1px;
      border-bottom: 1px;
      margin-top: 1em;
      margin-bottom: 1em;
}

.mmTitle {
      font-size: 150%;
      color: [[ColorPalette::SecondaryDark]];
      font-weight:bold;
      margin-top: 0.5em;
      margin-bottom: 0.5em;
}

/* Edit Template */

.mmEditFieldName {
      color:black;
}
.mmEditFieldValue input {
      border-top: 1px [[ColorPalette::SecondaryDark]] solid;
      border-right: 1px [[ColorPalette::SecondaryDark]] solid;
      border-left: 1px [[ColorPalette::SecondaryDark]] solid;
      border-bottom: 1px [[ColorPalette::SecondaryDark]] solid;
      margin-top: 0.5em;
      margin-bottom: 0.5em;
}

/* Category fields of a tiddler*/
.categoryFieldName {
      color:red;
}

.categoryFieldEdit input {
      border-top: 1px [[ColorPalette::SecondaryDark]] solid;
      border-right: 1px [[ColorPalette::SecondaryDark]] solid;
      border-left: 1px [[ColorPalette::SecondaryDark]] solid;
      border-bottom: 1px [[ColorPalette::SecondaryDark]] solid;
}

